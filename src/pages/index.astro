---
interface Option {
  title: string;
}

const options: Option[] = Array.from({ length: 10 }, (_, index) => {
  return {
    title: index.toString(),
  };
});
---

<div class="bg-black/90 h-screen">
  <div
    class="p-4 grid grid-cols-1 grid-rows-1 sm:grid-cols-4 sm:grid-rows-3 gap-2 sm:h-full"
  >
    {
      options.map((option) => (
        <div class="bg-white rounded-md">{option.title}</div>
      ))
    }
  </div>
</div>
